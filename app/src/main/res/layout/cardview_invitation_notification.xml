<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_notifications"
        android:layout_width="@dimen/dimen_40"
        android:layout_height="@dimen/dimen_40"
        android:background="@drawable/bg_profile"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginStart="@dimen/dimen_10"
        android:layout_marginVertical="@dimen/dimen_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_profile" />

    <TextView
        android:id="@+id/textView4"
        style="@style/regular_14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_10"
        android:text="notifikasi"
        app:layout_constraintBottom_toBottomOf="@+id/iv_notifications"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_notifications"
        app:layout_constraintTop_toTopOf="@+id/iv_notifications" />

    <ImageButton
        android:id="@+id/ib_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:src="@drawable/ic_accept_invitation"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/ib_decline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/ib_accept"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginEnd="@dimen/dimen_10"
        android:src="@drawable/ic_decline_invitation"
        android:background="@android:color/transparent"/>

</androidx.constraintlayout.widget.ConstraintLayout>