<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.authentication.KodeVerifikasiActivity">

    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dimen_16"
        android:paddingVertical="@dimen/dimen_16"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <LinearLayout
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_toEndOf="@+id/ic_back"
            android:orientation="vertical">

            <TextView
                style="@style/medium_18black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/verifikasi_email" />

            <TextView
                style="@style/regular_14sec300"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kode_verifikasi_telah_di_kirim_ke_email_kamu" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/image_email_verification"
        app:layout_constraintTop_toBottomOf="@+id/action_bar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linear_verification"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60"
        android:paddingHorizontal="@dimen/dimen_35"
        app:layout_constraintTop_toBottomOf="@id/img_forgot_password">

        <EditText
            android:id="@+id/et_1"
            style="@style/TextfieldsStyle"
            android:layout_width="@dimen/dimen_60"
            android:layout_height="@dimen/dimen_60"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/et_2"/>

        <EditText
            android:id="@+id/et_2"
            style="@style/TextfieldsStyle"
            android:layout_width="@dimen/dimen_60"
            android:layout_height="@dimen/dimen_60"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/et_3"
            app:layout_constraintStart_toEndOf="@id/et_1"/>

        <EditText
            android:id="@+id/et_3"
            style="@style/TextfieldsStyle"
            android:layout_width="@dimen/dimen_60"
            android:layout_height="@dimen/dimen_60"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/et_4"
            app:layout_constraintStart_toEndOf="@id/et_2"/>

        <EditText
            android:id="@+id/et_4"
            style="@style/TextfieldsStyle"
            android:layout_width="@dimen/dimen_60"
            android:layout_height="@dimen/dimen_60"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/et_3"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_30"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_verification">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tidak_menerima_kode"
            tools:layout_editor_absoluteX="143dp"
            tools:layout_editor_absoluteY="573dp" />

        <TextView
            android:id="@+id/txtView_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/minta_kode_lagi"
            android:textStyle="bold" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_email_verification"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_35"
        android:layout_marginTop="@dimen/dimen_70"
        android:text="@string/verifikasi_email"
        app:layout_constraintTop_toBottomOf="@id/tv_code" />
</androidx.constraintlayout.widget.ConstraintLayout>