<?xml version="1.0" encoding="utf-8"?>
  <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_100"
    tools:context=".ui.HomeFragment">

    <LinearLayout
        android:id="@+id/wrapper_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notifications"
            android:layout_marginStart="12dp" />

    </LinearLayout>

    <SearchView
        android:id="@+id/search_user"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layoutDirection="rtl"
        android:queryHint="@string/search_user"
        app:theme="@style/AppSearchView"
        android:searchIcon="@drawable/ic_search"
        android:iconifiedByDefault="false"
        android:background="@drawable/search_username_box"
        android:queryBackground="@android:color/transparent"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrapper_icon" />

    <LinearLayout
        android:id="@+id/wrapper_search_family"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_family_box"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_user">

        <ImageView
            android:id="@+id/ic_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="18dp"
            android:src="@drawable/ic_search_family" />

        <Spinner
            android:id="@+id/search_family"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="12dp"
            android:theme="@style/mySpinnerItemStyle" />

    </LinearLayout>

    <EditText
        android:id="@+id/ed_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_post_up"
        android:hint="@string/add_post"
        android:textSize="14sp"
        android:textColor="@color/neutral_500"
        android:textColorHint="@color/primary_500"
        android:inputType="textMultiLine"
        android:padding="32dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrapper_search_family" />

    <RelativeLayout
        android:id="@+id/wrapper_ic_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingHorizontal="12dp"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_post_down"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="-2dp"
        app:layout_constraintTop_toBottomOf="@+id/ed_post"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/add_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/ic_media"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_media"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/media_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/foto_or_video"
                android:textSize="12sp"
                android:textColor="@color/neutral_500"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/add_media">

            <ImageView
                android:id="@+id/ic_music"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_music"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/music_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/music"
                android:textSize="12sp"
                android:textColor="@color/neutral_500"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_post"
            android:layout_width="82dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/primary_300"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            android:stateListAnimator="@null"
            android:text="@string/post"
            android:textAllCaps="false"
            app:cornerRadius="12dp" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrapper_ic_post"
        tools:listitem="@layout/layout_post_content" />


</androidx.constraintlayout.widget.ConstraintLayout>