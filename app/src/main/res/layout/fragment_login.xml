<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginFragment"
    android:orientation="vertical"
    android:background="#FCF7F4">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:layout_marginStart="35dp"
        android:layout_marginTop="16dp"
        style="@style/medium_18black" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silahkan melakukan Login"
        android:layout_marginStart="35dp"
        android:layout_marginTop="8dp"
        style="@style/regular_14black" />
    <ImageView
        android:id="@+id/iv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:src="@drawable/image_login"
        android:scaleType="centerCrop"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:text="Email"
        style="@style/regular_14black"/>
    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="16dp"
        style="@style/TextfieldsStyle"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="35dp"
        android:text="Password"
        style="@style/regular_14black"/>
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="16dp"
        android:inputType="textPassword"
        style="@style/TextfieldsStyle"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:textAlignment="textEnd"
        android:text="Forgot password?"
        android:layout_marginTop="20dp"
        style="@style/regular_12"
        android:textColor="@color/primary_600"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="@dimen/dimen_161"
        android:layout_height="50dp"
        android:text="Login"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        style="@style/ButtonStyle"
        android:backgroundTint="@color/primary_500"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum Punya Akun? " />
        <TextView
            android:id="@+id/txtView_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>